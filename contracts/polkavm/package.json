{
  "name": "intran3t-polkavm-contracts",
  "version": "0.1.0",
  "description": "PolkaVM smart contracts for Intran3t",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "cargo build --release",
    "build:accesspass": "cargo build --release --bin accesspass",
    "build:forms": "./scripts/build-forms.sh",
    "build:test": "./scripts/build-test.sh",
    "deploy:accesspass": "tsx scripts/deploy-accesspass.ts",
    "deploy:forms": "tsx scripts/deploy-forms.ts",
    "test": "tsx test/accesspass.test.ts",
    "test:integration": "tsx test/integration.test.ts",
    "compute-selectors": "node scripts/compute-selectors.js",
    "compile:sol": "hardhat compile",
    "test:sol": "hardhat test",
    "deploy:forms-sol": "hardhat ignition deploy ./ignition/modules/Forms.ts --network paseoAssetHub",
    "clean:sol": "hardhat clean"
  },
  "dependencies": {
    "@polkadot/api": "^14.3.1",
    "@polkadot/keyring": "^13.2.3",
    "@polkadot/util": "^13.2.3",
    "@polkadot/util-crypto": "^13.2.3",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.5",
    "viem": "^2.21.54"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@parity/hardhat-polkadot": "^0.2.7",
    "@parity/resolc": "^0.2.0",
    "@types/node": "^22.10.5",
    "hardhat": "^2.28.4",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  }
}
